[sqlfluff]
dialect = postgres
max_line_length = 120
indent_unit = space
indent_size = 2

[sqlfluff:rules]
# Regras específicas para Flyway
exclude_rules = L034,L036

[sqlfluff:rules:L010]  # Capitalização de keywords
capitalisation_policy = upper

[sqlfluff:rules:L014]  # Identificadores não-quoted
extended_capitalisation_policy = lower
