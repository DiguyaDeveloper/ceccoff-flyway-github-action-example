[sqlfluff]
dialect = postgres
max_line_length = 120
indent_unit = space
indent_size = 2

[sqlfluff:rules]
# Regras específicas para Flyway
exclude_rules = L034,L036

# Configurações de capitalização atualizadas para sqlfluff v3+.
[sqlfluff:rules:capitalisation.keywords]
capitalisation = upper

[sqlfluff:rules:capitalisation.identifiers]
capitalisation = lower
